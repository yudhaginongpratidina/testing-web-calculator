<%- include('header') %>
<div class="container min-h-screen flex justify-center items-center">
    <div class="border border-gray-950 shadow-lg w-full max-w-md p-3">

        <h1 class="text-center text-2xl uppercase font-bold">kalkulator sederhana</h1>
        <p class="text-center text-sm text-purple-600">Dibuat oleh <%= author %> </p>

        <form class="border border-purple-600 shadow shadow-purple-600 mt-3 p-3">
            <div class="mb-3">
                <label for="firstNumber" class="text-sm">First Number</label><br>
                <input type="number" name="firstNumber" id="firstNumber" class=" border border-purple-600 w-full py-2">
            </div>
            <div class="mb-3">
                <label for="secodNumber" class="text-sm">Second Number</label><br>
                <input type="number" name="secodNumber" id="secodNumber" class=" border border-purple-600 w-full py-2">
            </div>
            <div class="flex justify-center gap-2">
                <button class="py-2 px-4 border border-purple-600 hover:bg-purple-600" id="tambah">Tambah</button>
                <button class="py-2 px-4 border border-purple-600 hover:bg-purple-600" id="kurang">Kurang</button>
                <button class="py-2 px-4 border border-purple-600 hover:bg-purple-600" id="bagi">Bagi</button>
                <button class="py-2 px-4 border border-purple-600 hover:bg-purple-600" id="kali">Kali</button>
            </div>
        </form>

        <div class="border border-purple-600 shadow shadow-purple-600 mt-3 p-3 ">
            <h1>Result : <span id="result">0</span></h1>
        </div>

        <div class="mt-3 mb-3 text-center">
            <h1>Copyright &copy; 2023</h1>
        </div>
    </div>
</div>
<%- include('footer') %>